<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_featured_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/home_featured_menu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="name"
        android:textSize="@dimen/level_two_textSize" />

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/home_featured_menu_nprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="nPrice"
            android:textColor="@color/menu_active"
            android:textSize="@dimen/level_two_textSize" />

        <cn.evendy.groupon.view.DeleteTextView
            android:id="@+id/home_featured_menu_oprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oPrice"
            android:textColor="@color/menu_active"
            android:textSize="@dimen/level_three_textSize"
            app:lineColor="@color/menu_active" />
    </LinearLayout>

</LinearLayout>